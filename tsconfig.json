{
  "compilerOptions": {
    "target": "esnext",
    "watch": true,
    "lib": ["DOM", "ES2021"],
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "outDir": "./built",
    "skipLibCheck": true, // to avoid errors in node_modules
    "module": "es2022",
    "types": []
  },
  "exclude": [
    "_archive",
    "_mystuff",
    "apps",
    "blockchain",
    "node_modules",
    "packages",
    "test"
  ],
  "include": ["./src/**/*"]
}
