{
  "compilerOptions": {
    "target": "esnext",
    "watch": true,
    "lib": ["DOM","ES2021"],
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution":"Node",
    "outDir": "./built",
    "skipLibCheck": true // to avoid errors in node_modules
  },
  "exclude": ["_archive","_mystuff","apps","blockchain","node_modules","packages"],
  "include": ["./src/**/*"]
}