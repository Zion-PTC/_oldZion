{
  "compilerOptions": {
    "target": "ESNext" /* Specify what JSX code is generated. */,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "module": "ES2022" /* Specify the root folder within your source files. */,
    "moduleResolution": "node",
    "types": [],
    "declaration": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./build/**/*", "./test/**/*"]
}
